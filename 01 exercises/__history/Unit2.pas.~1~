unit Unit2;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls;

type
  TForm2 = class(TForm)
    Memo1: TMemo;
    procedure Button1Click(Sender: TObject);

  private
    { Private declarations }
  public
    function SomarNumero(Numero1:integer; Numero2:integer):integer;
  end;

var
  Form2: TForm2;

implementation

{$R *.dfm}


{ TForm2 }



{ TForm2 }


{ TForm2 }

procedure TForm2.Button1Click(Sender: TObject);
var
  Resultado:integer;
begin
  Resultado:=SomarNumero(2,5);
  Memo1.Lines.Add(Resultado.toString)
end;

function TForm2.SomarNumero(Numero1, Numero2: integer): integer;
begin
Result:= Numero1+Numero2;
end;

end.
